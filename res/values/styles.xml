<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="edit_dialog_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="system_text_large" parent="android:TextAppearance.Holo.Large">
        <item name="android:layout_weight">@integer/weight_1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/simple_text</item>
    </style>
    <style name="system_text_large.bgRed">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="system_text_large.bgGreen">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="system_text_large.bgBlue">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="basic_white">
        <item name="android:background">@color/white</item>
    </style>
    <style name="basic_textview" parent="basic_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="system_style" parent="android:ButtonBar"></style>

    <color name="red">#ff0000</color>
    <color name="green">#00ff00</color>
    <color name="white">#ffffff</color>
    <color name="black">#000000</color>
    <color name="blue">#0000ff</color>
    <integer name="weight_1">1</integer>

</resources>